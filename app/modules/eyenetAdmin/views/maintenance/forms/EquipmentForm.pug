extends ../../../../../templates/eyenetAdmin

block content
    div.ui.container
        div.padl.padd.padb
            div.ui.segment.eheight
                div.ui.ribbon.label.big.inverted.blue 
                    p #{hip ? 'Edit' : 'Add'} Equipment Type
                .ui.container.inverted.teal.height3
                    form#form.ui.form.mleft(method="POST" action=`/eyenetAdmin/equiptype${hip? `/${hip.intEquipTypeID}?_method=PUT`: '/new'}`)
                        div.ui.field
                            label.ui.large.teal.tag  Type Name
                            input(type="text" name="utypename" value= hip ? hip.strEquipTypeName : '')
                        if(!hip)
                            div.ui.field    
                                input(type="hidden" name="sid" value=ID)
                        div#butt.warp2.height2
                            button#add.ui.labeled.orange.icon.button.rightp(type="submit")
                                i.add.icon
                                p #{hip ? 'Update' : 'Add'}
                            a.button.ui.labeled.orange.icon.button.rightp(href="/eyenetAdmin/equiptype")
                                i.add.icon
                                p Back
                            script.
                                {
                                    var eo = document.getElementById("main");
                                    var et = document.getElementById("equip");
                                    var ee = document.getElementById("con1");
                                    ee.classList.add("active");
                                    eo.classList.add("active");
                                    et.classList.add("active");
                                }
                                $('#form')
                                .form({
                                    inline: 'true',
                                    fields: {
                                    csname: {
                                        identifier: 'utypename',
                                        rules: [
                                        {
                                            type   : 'empty',
                                            prompt : 'Please enter a Value, Field is Required and Cannot be blank'
                                        }
                                        ]
                                        
                                        }
                                    }
                                    });
                        