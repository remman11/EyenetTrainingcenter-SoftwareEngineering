		link(rel='stylesheet' href='style.css')
		script(defer='' src='https://use.fontawesome.com/releases/v5.0.6/js/all.js')
		script(defer='' src='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.js')
		script(defer='',src='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.js')
