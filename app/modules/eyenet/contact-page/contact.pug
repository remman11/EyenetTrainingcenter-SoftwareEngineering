		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		script(src='validation.js')
	body
		.jumbotron.text-center
			.container
				h2.display-4 CONTACT US
				p.lead
			br
			br
			.ui.three.column.grid.container.center.aligned
				.column
					h3.ui.icon.header
						.circular.icon
							button.btn.btn-circle.btn-lg.bcollapse(type='button', data-toggle='collapse', data-target='#loc', aria-expanded='false', aria-controls='collapseExample')
								span.fa-stack.fa-4x
									i.fa.fa-square.fa-stack-2x.icc
									i.fa.fa-map-marker-alt.fa-stack-1x.ic
						.inqtitle
							| ADDRESS
						br
						#loc.collapse
							.center.aligned.det
								p.subt Main Office
								p #92 3rd Floor AMO Bldg.
								p New York Ave
								p Brgy. E. Rodriguez Cubao
								p Quezon City.
				.column
					h3.ui.icon.header
						button.btn.btn-default.btn-circle.btn-lg.bcollapse(type='button', data-toggle='collapse', data-target='#phone', aria-expanded='false', aria-controls='collapseExample')
							span.fa-stack.fa-4x
								i.fa.fa-circle.fa-stack-2x.icc
								i.fa.fa-phone.fa-stack-1x.ic
						br
						.inqtitle
							| CONTACTS
						br
						#phone.collapse
							.center.aligned
								.center.aligned.det
									p.subt Main Office Contacts
									p Landline: 440-4089
									p Globe: 0995-988-28-94 
									p Globe: 0915-539-41-61
									p Smart: 0908-988-99-82
				.column
					h3.ui.icon.header
						button.btn.btn-default.btn-circle.btn-lg.bcollapse(type='button', data-toggle='collapse', data-target='#email', aria-expanded='false', aria-controls='collapseExample')
							span.fa-stack.fa-4x
								i.fa.fa-circle.fa-stack-2x.icc
								i.fa.fa-envelope.fa-stack-1x.ic
						br
						.inqtitle
							| EMAIL
						br
						#email.collapse
							.center.aligned
								.center.aligned.det
									p.subt Main Office Email Address
									p eye.net_ittc@yahoo.com.ph
		.ui.two.column.grid.container.centered
			.column
				h2.ui.icon.header
					p.subh MESSAGE US
					br
					.description.centered
						p.subp Don't be shy.
						p.subp  Email us any questions or call the numbers above. 
						p.subp Any questions are entertained so don't hesitate to ask!
						br
						br
						br
						br
						a(href='https://www.facebook.com/eyenetrainingcenter')
							img(src='eissub.png')
			.column
				form#val
					.ui.one.column.grid.container
						.column
							label.subl(for='inqname') Full Name (optional)
							.form-group
								.ui.large.left.icon.input
									input#inqname.form-control(type='text', name='inqname', size='70')
									i.user.icon
					.ui.two.column.grid.container
						.column
							label.subl(for='inqemail') *Email Address
							.form-group
								.ui.large.left.icon.input
									input#inqemail.form-control(type='text', size='50')
									i.envelope.icon
						.column
							label.subl(for='inqnum') *Mobile Number
							.form-group
								.ui.large.left.icon.input
									input#inqnum.form-control(type='text', size='50')
									i.mobile.icon
					.ui.two.column.grid.container
						.column
							label.subl(for='inqsub') *Subject
							.form-group
								.ui.large.left.icon.input
									input#inqsub.form-control(type='text', size='50')
									i.book.icon
					.ui.one.column.grid.container
						.column
							label.subl(for='inqmessage') *Message
							.form-group
								textarea#inqmessage.form-control.large(rows='6')
								br
								button.large.ui.animated.button.active(type='submit', tabindex='0')
									#submit-btn.visible.content Submit
									.hidden.content
										i.right.arrow.icon
